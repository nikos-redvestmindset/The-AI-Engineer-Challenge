{
    "version": 2,
    "builds": [
      { "src": "frontend/package.json", "use": "@vercel/next" },
      { 
        "src": "api/app.py",
        "use": "@vercel/python",
        "config": {
          "runtime": "python3.12",
          "excludeFiles": [
            "pyproject.toml",
            "uv.lock"
          ]
        }
      }
    ],
    "routes": [
      { 
        "src": "/api/(.*)", 
        "dest": "api/app.py"
      },
      { 
        "src": "/(.*)", 
        "dest": "frontend/$1"
      }
    ]
  } 